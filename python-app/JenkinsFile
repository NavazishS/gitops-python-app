pipeline {
  agent {
    docker {
      // registryUrl 'https://docker.io'
      // registryCredentialsId 'dockerhub-cred'
      // image 'nawdocker/python:3.9-slim'
      image 'nawdocker/docker-curl-git:v2'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // In case your docker agent is created on the same host
      // args '-v $HOME/.m2:/root/.m2'
    }
  }
  stages {
    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        // build the project and create a JAR file
        // sh 'cd python-app && docker build -t my-python-web-service . && docker run -p 80:80 my-python-web-service && curl http://localhost:80/ '
	sh '''
            cd python-app
            docker build -t my-python-web-service .
            CONTAINER_ID=$(docker run -d -p 8081:80 my-python-web-service)
            sleep 10  # Wait for the web service to start
            CURL_OUTPUT=$(curl -s http://13.233.122.113:8081)
            echo "Curl Output: $CURL_OUTPUT"
            docker stop $CONTAINER_ID
        '''
      }
    }
    stage('Static Code Analysis') {
    environment {
        SONAR_URL = "http://13.233.122.113:9000"
    }
    steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
            dir('python-app') {
                sh '''
                    curl -LsS https://binaries.sonarsource.com/Distribution/sonar-scanner-cli/sonar-scanner-cli-5.0.1.3006-linux.zip > sonar-scanner-cli.zip
                    apk update && apk add unzip
                    unzip -o sonar-scanner-cli.zip
                    chmod +x sonar-scanner-5.0.1.3006-linux/bin/sonar-scanner
                    sonar-scanner-5.0.1.3006-linux/bin/sonar-scanner -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}
                '''
            }
        }
    }
}
    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "nawdocker/python:3.9-slim-${BUILD_NUMBER}"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            sh 'cd python-app && docker build -t ${DOCKER_IMAGE} .'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
            dockerImage.push()
            }
        }
      }
    }
    stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "gitops-python-app"
            GIT_USER_NAME = "NavazishS"
        }
        steps {
            withCredentials([string(credentialsId: 'jenkins-github', variable: 'GITHUB_TOKEN')]) {
                sh """
                    git init
                    git config --global --add safe.directory /var/lib/jenkins/workspace/gitops-python-app
                    git fetch --all
                    git config user.email "mailmenaw@gmail.com"
                    git config user.name "NawazishS"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s|image: nawdocker/python:[^[:space:]]*|image: nawdocker/python:3.9-slim-${BUILD_NUMBER}|g" python-app-manifests/deployment.yml
                    git add python-app-manifests/deployment.yml
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                """
            }
           cleanWs() // Clean the workspace
        }
    }
  }
}

